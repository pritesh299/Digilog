<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- BootstradivCSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="index.css">
    
    <title>DigiLog - Your digital Logbook</title>
</head>
<body>
  <header class="mb-auto">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">DigiLog</a>

            </div>
        </div>
    </nav>
</header>


    <div class="container mt-4">
        <div class="row">
            <% for (let i = 0; i < dataArray.length; i++) { %>
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <% let num=Math.floor(Math.random()*10)+1;console.log(num) %>
                        <div class="card-body  position-relative" style="background-image: url('/img<%=num %>.jpg');">
                            <form>
                                <h6 class="card-title">
                                    <%= dataArray[i].title %>
                                </h6>
                                <input name="entryId" value="<%= dataArray[i].id %>" hidden>
                                <button type="submit" formmethod="post" formaction="./entry" class="stretched-link" style="opacity: 0;"></button>
                            </form>
                        </div>
                        <div class="card-footer text-end">
                            <form>
                                <input name="entryId" value="<%= dataArray[i].id %>" hidden>
                                <button type="submit" formaction="./delete" formmethod="post" class="btn w-25 btn-danger"><i class="bi bi-trash"></i> Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
                
            <% } %>
       
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <form class="w-100 text-center" method="get" action="/new_entry">
                          
                            <button class="btn btn-primary w-75 btn-sm" type="submit">
                                <i class="bi bi-plus-square-fill mr-2"></i> Add New Entry
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            
         
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" crossorigin="anonymous"></script>
</body>
</html>
